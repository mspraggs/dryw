{
    var fiber = Fiber(|arg| {
        print("arg: ${arg}");
        var local = "yay!";
        Fiber.yield("Fiber yielded!");
        print("In a fiber: ${local}");
        Fiber.yield("Fiber yielded again!");
    });
    print(fiber.call("ok"));
    print(fiber.call());
    print(fiber.call());
}